<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/listview_item_start_end_margin"
    android:paddingStart="@dimen/listview_item_start_end_margin">

    <CheckBox
        android:id="@+id/friend_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/listview_item_start_end_margin"
        android:focusable="false" />

    <TextView
        android:id="@+id/friend_name"
        style="@style/listview_textview_style"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/friend_checkbox" />

    <Button
        android:id="@+id/delete_friend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:text="Delete" />
</RelativeLayout>