<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kiwi.auready_ver2.login.LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/layout_localAccount">

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="@string/login_hint_email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="@string/login_hint_password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/bt_login_complete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_weight="1"
                android:clickable="true" />
            <Button
                android:id="@+id/bt_signup_complete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/signup_button"
                android:layout_weight="1"
                android:clickable="true" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_logout_complete"
        android:text="로그아웃"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/txt_test_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
