<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lsitview_item_height"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/delete_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_marginStart="@dimen/listview_item_start_end_margin"
        android:translationX="@dimen/checkbox_start_trans_x" />

    <TextView
        android:id="@+id/taskhead_title"
        android:layout_marginStart="@dimen/listview_item_start_end_margin"
        style="@style/listview_textview_style"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/reorder"
        style="@style/listview_reorder_icon_style"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/listview_item_start_end_margin"
        android:src="@drawable/re_order_icon" />

</RelativeLayout>