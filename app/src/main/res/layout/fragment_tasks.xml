<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tasksview_background_color"
    android:orientation="vertical"
    android:paddingEnd="@dimen/listview_padding_to_make_card_view"
    android:paddingStart="@dimen/listview_padding_to_make_card_view">

    <TextView
        android:id="@+id/member_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center" />

    <ListView
        android:id="@+id/tasks_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/no_task_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="NO TASK"
        android:textSize="50dp" />
</LinearLayout>