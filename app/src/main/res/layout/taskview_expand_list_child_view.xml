<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/tasks_child_item_background"
    android:minHeight="@dimen/tasksview_child_item_height"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/list_item_padding"
        android:layout_marginStart="@dimen/list_item_padding"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/task_edittext"
        style="@style/listview_sub_textview_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/tasks_listview_delete_btn_width"
        android:layout_toRightOf="@id/checkbox"
        android:gravity="start"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium">

        <!--<requestFocus />-->
    </EditText>

    <Button
        android:id="@+id/delete_task_btn"
        android:layout_width="@dimen/tasks_listview_delete_btn_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#ff0000"
        android:text="@string/delete" />

    <Button
        android:id="@+id/add_task_btn"
        style="@style/add_button_style"
        android:text="+ Add Task" />
</RelativeLayout>