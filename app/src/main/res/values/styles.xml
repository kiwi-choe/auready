<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="custom_actionbar_textview_style" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listview_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/listview_item_textview_textsize</item>
        <item name="android:textColor">@color/listview_text_title</item>
    </style>

    <style name="listview_sub_textview_style">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/listview_item_sub_textview_textsize</item>
        <item name="android:textColor">@color/listview_sub_text</item>
    </style>

    <style name="listview_reorder_icon_style">
        <item name="android:layout_width">@dimen/listview_item_reorder_icon_size</item>
        <item name="android:layout_height">@dimen/listview_item_reorder_icon_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:tint">@color/icon_gray</item>
    </style>

    <style name="title_textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily">"sans-serif-medium</item>
        <item name="android:textSize">@dimen/title_textview_textsize</item>
        <item name="android:textColor">@color/listview_text_title</item>
    </style>

    <style name="add_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/listview_item_start_end_margin</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/color_picker_backgroud</item>
        <item name="android:textColorPrimary">@color/color_picker_title_color</item>
    </style>
</resources>
